<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_700"
    tools:context=".ui.detail.DetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:backgroundTint="@color/background_700">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/sd"
                android:paddingEnd="@dimen/sd">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/black_gradient"
                    android:elevation="1dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
                    app:layout_constraintEnd_toEndOf="@+id/imgAvatar"
                    app:layout_constraintStart_toStartOf="@+id/imgAvatar"
                    app:layout_constraintTop_toTopOf="@+id/imgAvatar"
                    tools:ignore="ContentDescription"/>

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/ic_profile" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/md"
            app:cardBackgroundColor="@color/background_500"
            app:cardCornerRadius="@dimen/ld"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/ld">

                <TextView
                    android:id="@+id/tvFollower"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textAlignment="center"
                    android:textColor="@color/secondaryFontColor"
                    android:textSize="@dimen/mf"
                    app:layout_constraintEnd_toStartOf="@id/tvFollowing"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="123" />

                <TextView
                    android:id="@+id/tvFollowing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textAlignment="center"
                    android:textColor="@color/secondaryFontColor"
                    android:textSize="@dimen/mf"
                    app:layout_constraintEnd_toStartOf="@id/tvRepository"
                    app:layout_constraintStart_toEndOf="@+id/tvFollower"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="876" />

                <TextView
                    android:id="@+id/tvRepository"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textAlignment="center"
                    android:textColor="@color/secondaryFontColor"
                    android:textSize="@dimen/mf"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvFollowing"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="987" />

                <TextView
                    android:id="@+id/follower"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="@string/follower"
                    android:textAlignment="center"
                    android:textColor="@color/mainFontColor"
                    app:layout_constraintEnd_toStartOf="@id/following"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFollower" />

                <TextView
                    android:id="@+id/following"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="@string/following"
                    android:textAlignment="center"
                    android:textColor="@color/mainFontColor"
                    app:layout_constraintEnd_toStartOf="@id/repository"
                    app:layout_constraintStart_toEndOf="@+id/follower"
                    app:layout_constraintTop_toBottomOf="@id/tvFollowing" />

                <TextView
                    android:id="@+id/repository"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="@string/repository"
                    android:textAlignment="center"
                    android:textColor="@color/mainFontColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/following"
                    app:layout_constraintTop_toBottomOf="@id/tvRepository" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/md"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="@dimen/md"
                    android:gravity="center_vertical"
                    android:textColor="@color/secondaryFontColor"
                    app:layout_constraintEnd_toStartOf="@+id/tvCompany"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/following"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="Jakarta Indonesia" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCompany"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/md"
                    android:drawableStart="@drawable/ic_work"
                    android:drawablePadding="@dimen/sd"
                    android:gravity="center_vertical"
                    android:textColor="@color/secondaryFontColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvLocation"
                    app:layout_constraintTop_toBottomOf="@+id/following"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="Jakarta Indonesia" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/md"
            app:cardCornerRadius="@dimen/ld"
            app:cardBackgroundColor="@color/background_500"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_200"
                    app:tabIndicatorColor="@color/secondaryFontColor"
                    app:tabSelectedTextColor="@color/mainFontColor"
                    app:tabTextColor="@color/secondaryFontColor"/>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:background="@color/background_200"
                    android:paddingBottom="160dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="92dp"
        android:layout_marginEnd="@dimen/xxld"
        app:fabSize="mini"
        app:backgroundTint="@color/white"
        app:srcCompat="@drawable/ic_share"
        android:contentDescription="@string/share" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/xld"
        android:layout_marginEnd="@dimen/xld"
        app:backgroundTint="@color/white"
        app:srcCompat="@drawable/ic_favorite_border"
        android:contentDescription="@string/favorite" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>