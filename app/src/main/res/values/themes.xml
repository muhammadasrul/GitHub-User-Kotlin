<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_500</item>
        <item name="colorPrimaryVariant">@color/background_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SearchTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="PreferenceTheme" parent="@style/Theme.MaterialComponents">
        <item name="android:background">@color/background_700</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="ThemeOverlay.GitHub.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>
</resources>